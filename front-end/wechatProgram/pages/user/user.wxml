    <image class="bar" src='/figs/bar.png'></image>
    <image class="bar" src='/figs/bar.png'></image>
  </view-->
  <view class="other-info">
    <text class="general-text" wx:if="{{userInfo.gender==1}}">Gender：  male</text>
    <text class="general-text" wx:else>Gender： female</text>
    <text class="general-text">Language:  {{userInfo.language}}</text>
    <text class="general-text">Country: {{userInfo.country}}</text>
    <text class="general-text">Province:  {{userInfo.province}}</text>
    <text class="general-text">City: {{userInfo.city}}</text>
  </view>
  <view class="about">
    <text class="about-text" bindtap='about'>About</text>
  </view>
</view>
