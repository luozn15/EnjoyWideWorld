/* pages/user/user.wxss */
.page-body-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.cover{
  position: absolute;
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, 0.37);
  z-index: 98;
}
.about-content{
  position: absolute;
  bottom: 3%;
  right: 3%;
  height: 65%;
  width: 94%;
  border-radius: 15rpx;
  background: #fff;
  z-index: 99;
}

.main-info {
  position: absolute;
  display: flex;
  flex-direction: row;
  height: 30%;
  width: 100%;
}

.under-other-info {
  position: absolute;
  height: 278px;
  width: 100%;
  bottom: 10%;
}

.other-info {
  position: absolute;
  height: 50%;
  width: 100%;
  bottom: 10%;
}
.about {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 8%;
  width: 100%;
  bottom: 3rpx;
  border-top: 3rpx solid #ddd;
  border-bottom: 3rpx solid #ddd;
  background-color: rgb(250, 250, 250);
}

.userinfo-avatar {
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  width: 256rpx;
  height: 256rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  position: absolute;
  bottom:10rpx;
  left: 50rpx;
  font-size: xx-large;
  color: #999999;
}

.bar{
  display: block;
  height: 50rpx;
  margin-left:-200rpx; 
  padding-top: 40rpx;
  opacity: 0.2;
}

.general-text {
  display:block;
  width: 65%;
  border-bottom: 2rpx solid #ddd;
  margin: 20px;
  padding-left: 20rpx;
  font-size: large;
  color: #888;
}
.large-text {
  display:block;
  width: 65%;
  margin: 15px;
  padding-left: 0rpx;
  font-weight: bold;
  font-size: x-large;
  color: #e67d22c9;
}
.small-text {
  display:block;
  width: 90%;
  margin: 10px;
  padding-left: 10rpx;
  font-weight: light;
  font-size: small;
  color: #888;
}
.about-text{
  display:block;
  width: 100%;
  margin: 20px;
  padding-left: 20rpx;
  font-size: large;
  color: #888;

}

