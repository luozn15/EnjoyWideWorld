/* pages/character/character.wxss */
@import "../../lib/weui.wxss";

.page {
  position: relative;
  width: 100%;
  height: 100vh;
  display:flex;                    
  justify-content: center;
}

.characterInfo{
  position: absolute;
  width: 180rpx;
  height: 80rpx;
  left:50rpx;
  top:70rpx;
  font-size:20rpx;
}

.experience {
  position: absolute;
  width: 650rpx;
  height: 40rpx;
  top:260rpx;
  left:60rpx;
}

.characterImage {
  position: absolute;
  width: 70%;
  bottom: 20%;
}
.ground {
  position: absolute;
  width: 100%;
  bottom:0%;
  opacity: 0.3;
}

.up {
  position: absolute;
  width: 70%;
  left: 0;
  top:-50px;
  opacity: 0.3;
}

.frame {
  position: absolute;
  width: 98%;
  bottom:0;
  opacity: 0.9;
}

.petname {
  position: fixed;
  top:30px;
  left: 50px;
  font-size: 50rpx;
  font-weight: bolder;
}
