<!--pages/character/character.wxml-->
<view class="page">

<text class="characterName">
{{userCharacterName}}
<!--{{page.characterName}}
-->
</text>
<text class="characterInfo">
血量：{{characterHP}}
攻击：{{characterAD}}
防御：{{characterDF}}
速度：{{characterSP}}
闪避：{{characterMiss}}
</text>
<text class="characterLevel">
Lv. {{userCharacterLevel}}
<!--{{page.characterLevel}}

-->
</text>

<progress class="experience" percent="{{userLevelLeft}}" color="red" stroke-width="20" activeColor="red" backgroundColor="#ccc" >
</progress>

<image 
class="characterImage"
src='{{characterSrc}}'
bindtap='to_act'

>
</image>
